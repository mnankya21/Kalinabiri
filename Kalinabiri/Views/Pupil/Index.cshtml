@model PagedList.IPagedList<Kalinabiri.Models.Pupil>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
<hr></hr>
@if (TempData["Success"] != null)
{
    <div class="green">
        <p>
            <strong>Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")|
    @Html.ActionLink("Export to PDF", "GeneratePDF")
</p>
<div id="view">
    <table>
        <tr>
         <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().OtherNames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PupilClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Stream)
            </th>
            <th>
            </th>
        </tr>
     
        @foreach (var item in Model)
        {
            <tr>
                <td>
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OtherNames)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PupilClass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stream)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.PupilID })
                   
                </td>
            </tr>
        }
    </table>
</div>
<br/><br/>
<div class="Pagination">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("First ", "Index", new { page = 1 })
        @Html.Raw(" ");
        @Html.ActionLink("<  Prev", "Index", new { page = Model.PageNumber - 1 })
    }
    else
    {
        @:<<
     @Html.Raw(" ");
        @:< Prev
        }
    @if (Model.HasNextPage)
    {
        @Html.ActionLink("Next  >", "Index", new { page = Model.PageNumber + 1 })
        @Html.Raw(" "); 
        @Html.ActionLink(" Last", "Index", new { page = Model.PageCount })
    }
    else
    {
        @:Next >
     @Html.Raw(" ")
        @:>>
        }
</div>
