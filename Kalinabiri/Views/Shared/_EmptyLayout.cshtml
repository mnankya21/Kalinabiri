<!DOCTYPE html>
<html lang="en">
<head>
    <link href="@Url.Content("~/sdmenu/sdmenu.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/custom-formatting.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" language="javascript" src="@Url.Content("~/sdmenu/sdmenu.js")" ></script>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            try {
                $(".ui-date-picker").datepicker({ dateFormat: 'yy-mm-dd' });
            } catch (e) { alert(e); }
        });

        var myMenu;
        window.onload = function () {
            myMenu = new SDMenu("my_menu");
            myMenu.init();
        };
    </script>
</head>
<body class="white-background" >
    <table class="large-table" style="border-right: solid 1px #00008B;border-left: solid 1px #00008B; margin-right: 15px;">
        <tr style="background-color: #00008B">
            <td width="80">
                <img src="../../Images/logo.png" style="width: 130px; height:100px">
            </td>
            <td>
                <p class="site-title">
                      KALINABIRI PRIMARY SCHOOL</p>
                <header>
           
        </header>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="background-color: red; height: 5px">
            </td>
        </tr>
        <td style="vertical-align: top;  min-width: 200px;
            border-spacing: 4px; margin-right: 15px;">
          
        </td>
        <td style="border: 4px;">
            <div id="body" class="FrameBorder">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix" style="min-height: 400px">
                @if (TempData["message"] != null)
                {
       <div class="Message">@TempData["message"]</div>
                }

                @RenderBody()
             
            </section>
                <script type="text/javascript">

                    $(function () {
                        $("#body").fadeOut(100).fadeIn(1000);

                    });
                </script>
                  <script type="text/javascript">

                      $(function () {
                          $(".green").show(4000).fadeOut(8000);

                      });
                         </script>
                        <script type="text/javascript">

                            $(function () {
                                $(".red").show(4000).fadeOut(8000);

                            });
                
                </script>
            </div>
        </td>
        </tr>
        <tr>
            <td colspan="2">
                <hr></hr>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: center" >
                <footer style="text-align: center">
            
                <div style="font-size:12px;" class="float-left">
                <p>&copy; Software World(U) Ltd @DateTime.Now.Year </p>
                </div>
            
        </footer>
                @RenderSection("scripts", required: false)
            </td>
        </tr>
    </table>
</body>
</html>
